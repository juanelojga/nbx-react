# Production Environment Variables
# These should be set in Netlify dashboard and GitHub Secrets

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://nbx-react.netlify.app
NEXT_PUBLIC_API_URL=https://nbx-django-production.up.railway.app
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://nbx-django-production.up.railway.app/graphql

# Authentication
NEXTAUTH_URL=https://your-domain.netlify.app
NEXTAUTH_SECRET=your-nextauth-secret

# Analytics (optional)
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
